<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- hjw -->
    <!--
		If you want to change the topbar and bottombar font
		just add these entries to your current theme
		and be sure to use a valid filename.
		The font file must be placed inside your project "assets/" directory
		
		<item name="toolbarFont">fonts/BigCaslon.ttf</item>
		<item name="bottombarFont">fonts/BigCaslon.ttf</item>
    -->
    <!-- aviary -->
    <style name="BaseTheme" parent="android:Theme.Black.NoTitleBar"></style>

    <style name="FeatherDefaultTheme.Dialog" parent="android:Theme.Dialog">
        <item name="dialog_layout">@null</item>
        <item name="dialog_button">@android:style/Widget.Button</item>
    </style>

    <!-- msc -->
    <style name="SpeechApiTheme" parent="@android:style/Theme">
        <item name="android:windowTitleStyle">@style/SpeechApiWindowTitle</item>
        <item name="android:windowTitleSize">49dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/SpeechApiWindowTitleBackground</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
        <item name="android:buttonStyle">@style/SpeechApiButton</item>
    </style>

    <style name="SpeechApiLauncherTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
    </style>

    <style name="SpeechApiPreferenceTheme" parent="@android:style/Theme">
        <item name="android:windowTitleStyle">@style/SpeechApiWindowTitle</item>
        <item name="android:windowTitleSize">36dip</item>
        <item name="android:preferenceCategoryStyle">@style/SpeechApiPreferenceCategory</item>
    </style>

</resources>